[Unit]
Description=Cloudgene Server
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/mnt/data/cloudgene
ExecStart=/mnt/data/cloudgene/cloudgene server
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Environment variables
Environment=JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64

[Install]
WantedBy=multi-user.target
